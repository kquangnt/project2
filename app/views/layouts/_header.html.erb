<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("reckless_think"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
          <li class="hi"><%= t "hi" %><%= current_user.name %></li>
          <% if current_user.is_admin? %>
            <li><%= link_to t("books"), admin_users_path %></li>
            <li><%= link_to t("orders"), admin_users_path %></li>
            <li><%= link_to t("users"), admin_users_path %></li>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", "data-toggle": "dropdown"} do %>
              <%= t "account" %><b class="caret"></b><% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), "#" %></li>
              <li><%= link_to t("settings"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("logout"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sign_up"), new_user_registration_path %></li>
          <li><%= link_to t("login"), new_user_session_path %></li>
        <% end %>
        <li><%= link_to t("cart"), "#" %></li>
      </ul>
    </nav>
  </div>
</header>
