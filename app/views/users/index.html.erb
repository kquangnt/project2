<% provide :title, t("all_users") %>
<h1><%= t "all_users" %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= user.id %>
      <%= link_to user.name, user %>
      <%= link_to t("details"), {class: "form_align"} do %> user_path(user) <% end %>
      <%= link_to t("edit"), {class: "form_align"} do %> edit_user_registration(user) <% end %>
      <%= link_to t("delete"), {class: "form_align", method: :delete, data: {confirm: t("are_you_sure")} do %> user <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
